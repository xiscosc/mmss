  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "customer": {
            "$ref": "#/components/schemas/Customer"
          },
          "storeId": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          },
          "observations": {
            "type": "string"
          }
        },
        "required": ["id", "customer", "storeId", "createdAt", "user"]
      },
      "Item": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "orderId": {
            "type": "string"
          },
          "moldingId": {
            "type": "string"
          },
          "width": {
            "type": "number",
            "format": "double"
          },
          "height": {
            "type": "number",
            "format": "double"
          },
          "passePartoutId": {
            "type": "string"
          },
          "passePartoutWidth": {
            "type": "number",
            "format": "double"
          },
          "passePartoutHeight": {
            "type": "number",
            "format": "double"
          },
          "glassId": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "observations": {
            "type": "string"
          },
          "quantity": {
            "type": "integer"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "orderId",
          "moldingId",
          "width",
          "height",
          "glassId",
          "description",
          "observations",
          "quantity",
          "createdAt"
        ]
      },
      "CalculatedItem": {
        "type": "object",
        "properties": {
          "itemId": {
            "type": "string"
          },
          "discount": {
            "type": "number",
            "format": "double"
          },
          "parts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "price": {
                  "type": "number",
                  "format": "double"
                },
                "quantity": {
                  "type": "integer"
                },
                "log": {
                  "type": "string"
                }
              }
            }
          } 
        }
      },
      "Customer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "storeId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "storeId", "name", "phone"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "storeId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["id", "storeId", "name"]
      }
    }
